{
  "name": "paint",
  "private": true,
  "version": "0.2.3",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "spell": "cspell .",
    "spell:check": "cspell --no-progress .",
    "preview": "vite preview",
    "test": "npm run test:unit && npm run test:storybook",
    "test:unit": "vitest --config vitest.unit.config.ts",
    "test:storybook": "vitest --config vitest.config.ts",
    "test:run": "npm run test:unit -- --run && npm run test:storybook -- --run",
    "test:coverage": "npm run test:coverage:unit && npm run test:coverage:storybook && npm run test:coverage:merge",
    "test:coverage:unit": "vitest --config vitest.unit.config.ts run --coverage",
    "test:coverage:storybook": "vitest --config vitest.config.ts run --coverage",
    "test:coverage:merge": "npx tsx scripts/merge-coverage.ts",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "@bf-i18n/core": "^0.5.7",
    "@bf-i18n/react": "^0.5.7",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/vite": "^4.1.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "file-type": "^21.2.0",
    "lucide-react": "^0.562.0",
    "next-themes": "^0.4.6",
    "pixi.js": "^8.14.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.69.0",
    "react-hsv-ring": "^0.1.9",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "ua-parser-js": "^2.0.7",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@eslint/js": "^9.39.1",
    "@storybook/addon-a11y": "^10.1.10",
    "@storybook/addon-docs": "^10.1.10",
    "@storybook/addon-onboarding": "^10.1.10",
    "@storybook/addon-vitest": "^10.1.10",
    "@storybook/react-vite": "^10.1.10",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/ua-parser-js": "^0.7.39",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "@vueless/storybook-dark-mode": "^10.0.4",
    "cspell": "^9.4.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-storybook": "^10.1.10",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "jsdom": "^27.3.0",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "storybook": "^10.1.10",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.16"
  },
  "volta": {
    "node": "24.12.0"
  }
}
